<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anbdevelopers.androidballgame.MainActivity">

    <TextView
        android:id="@+id/level_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Level : 1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/re_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="76dp"
        android:onClick="restartGame"
        android:text="Restart Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        android:onClick="restartLevel"
        android:text="Restart Level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ball0"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginTop="108dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blue_ball" />

    <ImageView
        android:id="@+id/ball1"
        android:layout_width="77dp"
        android:layout_height="66dp"
        android:layout_marginTop="180dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cyan_ball" />

    <ImageView
        android:id="@+id/ball2"
        android:layout_width="74dp"
        android:layout_height="71dp"
        android:layout_marginTop="248dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dark_ball" />

    <ImageView
        android:id="@+id/red_ball_0"
        android:layout_width="82dp"
        android:layout_height="81dp"
        android:layout_marginTop="328dp"
        android:onClick="redBallClicked"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red_ball" />

    <ImageView
        android:id="@+id/red_ball_1"
        android:layout_width="82dp"
        android:layout_height="66dp"
        android:layout_marginTop="108dp"
        android:onClick="redBallClicked"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red_ball" />

    <ImageView
        android:id="@+id/ball3"
        android:layout_width="81dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_ball_1"
        app:srcCompat="@drawable/green_ball" />

    <ImageView
        android:id="@+id/ball4"
        android:layout_width="65dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ball3"
        app:srcCompat="@drawable/orange_ball" />

    <ImageView
        android:id="@+id/ball5"
        android:layout_width="72dp"
        android:layout_height="71dp"
        android:layout_marginTop="8dp"
        android:onClick="ballClicked"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ball4"
        app:srcCompat="@drawable/purple_ball" />

    <TextView
        android:id="@+id/score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Score: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/re_game"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/re_game" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You loose if you click \nthe red ball"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level_txt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmed bilal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/re_game"
        app:layout_constraintTop_toBottomOf="@+id/score_txt"
        app:layout_constraintVertical_bias="0.715" />

</androidx.constraintlayout.widget.ConstraintLayout>